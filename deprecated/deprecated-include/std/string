namespace std {
	namespace string {

		namespace _detail {

			struct strtok_container {
				char* str_to_process;
				unsigned int current_index;
			}
		}

		func const unsigned int strlen(const char* str);

		func const signed int strcmp(const char* str1, const char* str2);
		func const signed int strncmp(const char* str1, const char* str2 ,
			const unsigned int n );

		func char* strcat(char* str1 , const char* str2 );
		func char* strncat(char* str1 , const char* str2 ,
			const unsigned int n );

		func char* strchr(char* str , const char c );
		func const unsigned int strchr_i(const char* str , const char c );
		func char* strrchr(char* str , const char c );
		func const unsigned int strrchr_i(const char* str , const char c );

		func char* strnchr(char* str , const char c ,
			const unsigned int n );
		func const unsigned int strnchr_i(const char* str , const char c ,
			const unsigned int n );

		func char* strcpy(char* str1 , const char* str2 );
		func char* strncpy(char* str1 , const char* str2 ,
			const unsigned int n );

		func const unsigned int strcspn(const char* str1 , const char* str2 );
		func const unsigned int strspn(const char* str1 , const char* str2 );

		func char* strstr(char* str1 , const char* str2 );
		func const unsigned int strstr_i(const char* str1 , const char* str2 );

		func char* strpbrk(char* str1 , const char* str2 );
		func char* strnpbrk(char* str1 , const char* str2 ,
			const unsigned int n );
		func const unsigned int strpbrk_i(const char* str1 , const char* str2 );
		func const unsigned int strnpbrk_i(char* str1 , const char* str2 ,
			const unsigned int n );

		func char* strtok(char* str , const char* delims );
	}
}
